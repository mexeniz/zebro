<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zebr.isel.zebro.MainActivity"
    android:background="#ffffff"
    android:id="@+id/titleScreen">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ZEBRO"
        android:id="@+id/title"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="46dp"
        android:focusable="false"
        android:layout_below="@+id/logo2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo2"
        android:src="@drawable/zebro"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start App"
        android:id="@+id/startButton"
        android:background="#003d3d3d"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="startApp"
        android:textSize="18dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:id="@+id/welcomeScreen"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo1"
            android:src="@drawable/zebro_invert"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ZEBRO"
            android:id="@+id/textView2"
            android:textStyle="bold|italic"
            android:textSize="50dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:focusable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/logo1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ISEL Lab inc."
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:textAlignment="center"
            android:textColor="#000000" />

    </RelativeLayout>

</RelativeLayout>
