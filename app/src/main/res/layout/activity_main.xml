<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zebr.isel.zebro.MainActivity"
    android:background="@drawable/background"
    android:id="@+id/titleScreen"
    android:backgroundTint="#46000000"
    android:backgroundTintMode="src_over">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ZEBRO"
        android:id="@+id/title"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="46dp"
        android:focusable="false"
        android:layout_below="@+id/logo2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo2"
        android:src="@drawable/zebro"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/walkFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_walk"
        android:onClick="onWalkClicked"
        app:backgroundTint="#4DAF4E"
        app:fabSize="normal"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/logo2"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:alpha="0"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/carFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_car"
        android:onClick="onCarClicked"
        app:backgroundTint="#3F51B5"
        app:fabSize="normal"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/logo2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:alpha="0"
        android:background="#00ffffff"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:onClick="onInfoClicked"
        android:src="@drawable/info"
        android:background="#00ffffff"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ISEL Lab inc."
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textIsSelectable="false" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:id="@+id/welcomeScreen"
        android:layout_alignParentTop="false"
        android:layout_toEndOf="@+id/logo2"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo1"
            android:src="@drawable/zebro_invert"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ZEBRO"
            android:id="@+id/textView2"
            android:textStyle="bold|italic"
            android:textSize="50dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:focusable="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/logo1" />

    </RelativeLayout>

</RelativeLayout>
