<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zebro.isel.zebro.PopActivity"
    android:alpha="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pawissakan Chiruuphapa"
        android:id="@+id/developer1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:shadowColor="#6b5a5a"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanchai Jaktheerangkoon"
        android:id="@+id/developer2"
        android:singleLine="false"
        android:shadowColor="#6b5a5a"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/developer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onCloseClicked"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ISEL Lab inc."
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textIsSelectable="false" />
</RelativeLayout>
